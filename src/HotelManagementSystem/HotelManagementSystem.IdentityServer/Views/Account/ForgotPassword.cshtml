@model ForgotPasswordViewModel

<div class="login-page">
    <div class="d-flex justify-content-center">

        <div class="login-container">
            @if (Model.IsConfirmationPage && Model.IsPasswordRequestSuccess)
            {
                <div class="alert alert-success">
                    <strong>We've sent an email with the instructions to reset your password.</strong>
                </div>
            }
            else if (Model.IsConfirmationPage)
            {
                <div class="alert alert-danger">
                    <strong>Sorry, we couldn't find an account with the given username. Please try again with valid username.</strong>
                </div>
            }
            <partial name="_ValidationSummary" />
            <div class="card w-100">
                <div class="card-body">
                    <div class="text-center">
                        <img src="~/vikinglogo_black.png" width="120" />
                    </div>
                    <div class="text-center">
                        <h5>LIGHTHOUSE IDENTITY</h5>
                    </div>

                    <form asp-route="ForgotPassword" id="password-reset-form">
                        <div class="text-center mb-2">
                            <h5>Forgot password</h5>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="text-center mb-3">Enter your username and we'll send you instructions on how to reset your password.</div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>

                        <div class="row text-center mb-3">
                            <div class="col-md-12">
                                <button class="btn btn-primary w-100" name="button" value="login">Send Reset Link</button>
                            </div>
                        </div>
                        <div class="row text-center mb-1">
                            <div class="col-md-12">
                                <a class="viking-color"
                                   asp-controller="Account"
                                   asp-action="Login"
                                   asp-route-returnUrl="@Model.ReturnUrl">
                                    Login
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>